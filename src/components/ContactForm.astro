<!-- 
This component renders a contact form that allows users to submit their name, email, and a message.
The form data is then sent to a backend endpoint for processing.
-->

<div class="contact-form mt-8">
    <form action="/submit-form" method="post">
        <div class="mb-4">
            <label for="name" class="block text-gray-600">Name:</label>
            <input type="text" id="name" name="name" class="w-full px-3 py-2 border border-gray-400 bg-gray-200 rounded focus:bg-gray-300 focus:ring-2 focus:ring-blue-200" required>
        </div>

        <div class="mb-4">
            <label for="email" class="block text-gray-600">Email:</label>
            <input type="email" id="email" name="email" class="w-full px-3 py-2 border border-gray-400 bg-gray-200 rounded focus:bg-gray-300 focus:ring-2 focus:ring-blue-200" required>
        </div>

        <div class="mb-4">
            <label for="message" class="block text-gray-600">Message:</label>
            <textarea id="message" name="message" rows="4" class="w-full px-3 py-2 border border-gray-400 bg-gray-200 rounded focus:bg-gray-300 focus:ring-2 focus:ring-blue-200" required></textarea>
        </div>

        <button type="submit" class="px-5 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-200">Submit</button>
    </form>
</div>
