---
import Container from "./Container.astro";
import FeatureOutline from "./FeatureOutline.astro";
---

<Container>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 w-full items-start">
        <!-- Text Block on the Left -->
        <div class="lg:col-span-1 p-4">
            <!-- Your text content here -->
            <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">
                Why Choose Us?
            </h2>
            <p class="text-gray-600 dark:text-gray-300">
                Explore the benefits of our platform and understand how our features can streamline your workflow.
            </p>
            <button class="mt-4 rounded-full bg-blue-600 text-white py-2 px-6 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-opacity-50">
                Find out more
            </button>
        </div>
        
        <!-- Feature Cards on the Right -->
        <div class="lg:col-span-1 grid grid-cols-2 gap-4">
            <!-- Features will be defined in FeatureOutline.astro -->
            <FeatureOutline title="One-Click Docs" 
                description="Publish your documentation with a single click and customize to match your brand."
                buttonLink="/whysnowcell" 
                buttonText="Learn More">
                <img src="/images/pay.png" alt="One-Click Docs" class="w-full" />
            </FeatureOutline>

            <FeatureOutline title="Visitor Authentication" 
                description="Secure your documents with custom access and visitor authentication."
                buttonLink="/whysnowcell" 
                buttonText="Learn More">
                <img src="/images/work-speed.png" alt="Visitor Authentication" class="w-full" />
            </FeatureOutline>
        </div>
    </div>
</Container>

