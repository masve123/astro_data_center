---
import Container from "./Container.astro";
import FeatureOutline from "./FeatureOutline.astro";
import HeroButton from "./HeroButton.astro";
---
<section class="py-20 bg-white dark:bg-darker">
<Container>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 w-full items-start">
        <!-- Text Block on the Left -->
        <div class="lg:col-span-1 p-4">
            <!-- Your text content here -->
            <h2 class="text-2xl font-bold text-gray-800 dark:text-white mb-4">
                Why Choose Us?
            </h2>
            <p class="text-gray-600 dark:text-gray-300">
                Explore the benefits of our platform and understand how our features can streamline your workflow.
            </p>
            <!-- <button class="mt-4 rounded-full bg-blue-600 text-white py-2 px-6 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-600 focus:ring-opacity-50">
                Find out more
            </button> -->
            <div class="mt-10 w-full flex max-w-md mx-auto lg:mx-0">
                <div class="flex sm:flex-row flex-col gap-5 w-full">
                    <form action="#" class="py-1 pl-6 w-full pr-1 flex gap-3 items-center text-heading-3 shadow-lg shadow-box-shadow
                        border border-box-border bg-box-bg rounded-full ease-linear focus-within:bg-body focus-within:border-primary dark:border-gray-700 dark:bg-dark">
                        <span class="min-w-max pr-2 border-r border-box-border dark:border-gray-600">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 dark:stroke-gray-300">
                                <!-- SVG Path here -->
                                <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 9v.906a2.25 2.25 0 01-1.183 1.981l-6.478 3.488M2.25 9v.906a2.25 2.25 0 001.183 1.981l6.478 3.488m8.839 2.51l-4.66-2.51m0 0l-1.023-.55a2.25 2.25 0 00-2.134 0l-1.022.55m0 0l-4.661 2.51m16.5 1.615a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V8.844a2.25 2.25 0 011.183-1.98l7.5-4.04a2.25 2.25 0 012.134 0l7.5 4.04a2.25 2.25 0 011.183 1.98V19.5z" />
                            </svg>                                                                  
                        </span>
                        <input type="email" name="" id="" placeholder="johndoe@gmail.com" class="w-full py-3 outline-none bg-transparent dark:text-gray-300">
                        <HeroButton variant={"primary"} className={"min-w-max text-white"}>
                            <span class="hidden sm:flex relative z-[5]">
                                Get In Touch
                            </span>
                            <span class="flex sm:hidden relative z-[5]">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5" />
                                </svg>                                      
                            </span>
                        </HeroButton>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Feature Cards on the Right -->
        <div class="lg:col-span-1 grid grid-cols-2 gap-4">
            <!-- Features will be defined in FeatureOutline.astro -->
            <FeatureOutline title="One-Click Docs" 
                description="Publish your documentation with a single click and customize to match your brand."
                buttonLink="/whysnowcell" 
                buttonText="Learn More">
                <img src="/images/pay.png" alt="One-Click Docs" class="w-full" />
            </FeatureOutline>

            <FeatureOutline title="Visitor Authentication" 
                description="Secure your documents with custom access and visitor authentication."
                buttonLink="/whysnowcell" 
                buttonText="Learn More">
                <img src="/images/work-speed.png" alt="Visitor Authentication" class="w-full" />
            </FeatureOutline>
        </div>
    </div>
</Container>
</section>
