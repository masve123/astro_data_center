---
import Button from './Button.astro';
const { title, description, buttonLink, buttonText = "Learn More", buttonEmphasis = "primary" } = Astro.props;
---

<!-- Conditional rendering based on whether buttonLink is provided -->
<!-- Conditional rendering based on whether buttonLink is provided -->
{buttonLink ? (
    <a href={buttonLink} class="block no-underline hover:no-underline text-current" aria-label={`Learn more about ${title}`}>
      <div class="flex flex-col gap-6 rounded-2xl p-8 transition duration-300 border border-gray-300 hover:border-gray-400 dark:border-gray-700 hover:shadow-xl bg-gray-100 dark:bg-transparent">
        <div class="flex h-10 w-10 items-center justify-center rounded border border-gray-200 dark:border-gray-700">
            <slot />
        </div>
        <div class="flex-1">
            <h2 class="text-xl font-semibold text-gray-900 dark:text-white">
                {title}
            </h2>
            <p class="mt-3 text-gray-600 dark:text-gray-400">
                {description}
            </p>
        </div>
    </div>
  </a>
) : (
<div class="flex flex-col gap-6 rounded-2xl p-8 transition duration-300 border border-gray-300 dark:border-gray-700 hover:shadow-xl bg-gray-100 dark:bg-transparent">
      <div class="flex h-10 w-10 items-center justify-center rounded border border-gray-200 dark:border-gray-700">
          <slot />
      </div>
      <div class="flex-1">
          <h2 class="text-xl font-semibold text-gray-900 dark:text-white">
              {title}
          </h2>
          <p class="mt-3 text-gray-600 dark:text-gray-400">
              {description}
          </p>
      </div>
  </div>
)}
