---
import Container from "./Container.astro";
---

<section class="relative mt-[calc(100vh-4rem)] md:mt-20">
  <Container>
    <div
      class="mx-auto lg:mx-0 p-5 sm:p-6 py-6 sm:py-8 max-w-5xl rounded-3xl bg-box-bg border border-box-border shadow-lg shadow-box-shadow md:divide-x divide-box-border grid grid-cols-2 md:grid-cols-4 gap-4 sm:gap-8 md:gap-6 lg:gap-12 dark:bg-dark dark:border-dark-border dark:divide-dark-border"
    >
    <div class="text-center">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1 dark:text-gray-100"
        >
          80%
        </h2>
        <p class="mt-2 text-heading-3 dark:text-gray-300">Less Expensive</p>
      </div>
      
      <div class="text-center">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1 dark:text-gray-100"
        >
          60%
        </h2>
        <p class="mt-2 text-heading-3 dark:text-gray-300">Reduction In Latency</p>
      </div>

      <!-- ... repeat for each grid item ... -->
      <div class="text-center">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1 dark:text-gray-100"
        >
          35x
        </h2>
        <p class="mt-2 text-heading-3 dark:text-gray-300">Faster Than Legacy Providers</p>
      </div>

      <div class="text-center">
        <h2
          class="font-semibold text-xl sm:text-2xl md:text-4xl text-heading-1 dark:text-gray-100"
        >
          7
        </h2>
        <p class="mt-2 text-heading-3 dark:text-gray-300">Continents</p>
      </div>
    </div>
  </Container>
</section>
