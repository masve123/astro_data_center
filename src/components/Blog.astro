---
import Container from "./Container.astro";

// Fetch the list of blog posts
const posts = await Astro.glob('../posts/**/*.md');

---
<section>
<div id="blog">
    <Container>
        <div class="mb-12 space-y-2 text-center">
            <h2 class="text-3xl font-bold text-gray-800 dark:text-white md:text-4xl">Latest Articles</h2>
            <p class="text-gray-600 dark:text-gray-300 lg:mx-auto lg:w-6/12">Latest insights and ideas from our team.</p>
        </div>
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            {
                posts.map((post) => (
                    <div class="group rounded-3xl border border-gray-100 bg-white bg-opacity-50 p-6 shadow-2xl shadow-gray-600/10 dark:border-gray-700 dark:bg-gray-800 dark:shadow-none sm:p-8">
                        <div class="relative overflow-hidden rounded-xl">
                            <img src={post.frontmatter.thumbnail} alt="Article thumbnail" loading="lazy" class="h-64 w-full object-cover object-top transition duration-500 group-hover:scale-105" />
                        </div>
                        <div class="relative mt-6">
                            <h3 class="text-2xl font-semibold text-gray-800 dark:text-white">{post.frontmatter.title}</h3>
                            <p class="mt-6 mb-8 text-gray-600 dark:text-gray-300">{post.frontmatter.description}</p>
                            <a class="inline-block" href={`/${post.frontmatter.slug}`}>
                                <span class="text-info dark:text-blue-300">Read more</span>
                            </a>
                        </div>
                    </div>
                ))
            }
        </div>
    </Container>
</div>
</section>
    

